<?xml version="1.0" encoding="UTF-8"?>
<bean>
    <bean name="nettyConf">
        <property name="port">8080</property>
        <property name="sessionInvalidTime">1800000</property>
        <property name="sessionCheckInterval">60000</property>
    </bean>
    <bean name="springConf">
       <property name="springPath">classpath:spring-*.xml</property>
        <property name="springMvcPath">classpath:servlet.xml</property>
    </bean>
     <bean name="rpcConf">
       <property name="maxDataLen">1024</property>
        <property name="responseTimeOut">60</property>
    </bean>
</bean>
